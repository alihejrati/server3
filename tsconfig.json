{
    "include": ["**/*"],
    "compilerOptions": {
        "resolveJsonModule": true,
        "outDir": "./compiled",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2018", "dom"],
        "baseUrl": ".",
        "paths": {
            "@code/*": ["code/*"],
            "@file/*": ["file/*"],
            "@kernel/*": ["code/kernel/*"],
            "@source/*": ["code/source/*"],
            "@event/*": ["code/source/event/*"],
            "@server/*": ["code/source/server/*"]
        }
    }
}